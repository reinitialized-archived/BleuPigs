{
	"env": {
		"node": true,
		"es2021": true
	},
	"ignorePatterns": "dist/*",
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"curly": "error",
		"prettier/prettier": [
			"warn",
			{
				"semi": false,
				"trailingComma": "all",
				"singleQuote": true,
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true,
				"bracketSpacing": true,
				"bracketSameLine": false,
				"endOfLine": "lf"
			}
		]
	}
}
